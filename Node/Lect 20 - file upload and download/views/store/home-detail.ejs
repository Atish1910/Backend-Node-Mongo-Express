<%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>

    <main class="container mt-5 bg-white shadow rounded p-4">
      <h2 class="h3 text-danger fw-bold text-center mb-4">
        Details of <%= home.houseName %>
      </h2>

      <div class="row g-4">
        <div class="col-md-6">
          <img
            src="<%= home.photo %>"
            alt="<%= home.name %>"
            class="img-fluid rounded"
            style="height: 400px; object-fit: cover; width: 100%;" />
        </div>

        <div class="col-md-6">
          <div class="mb-4 border-bottom pb-3">
            <h3 class="h5 fw-semibold mb-2">Description</h3>
            <p class="text-muted"><%= home.description %></p>
          </div>

          <div class="mb-4 border-bottom pb-3">
            <h3 class="h5 fw-semibold mb-2">Location</h3>
            <p class="text-muted"><%= home.location %></p>
          </div>

          <div class="mb-4 border-bottom pb-3">
            <h3 class="h5 fw-semibold mb-2">Price</h3>
            <p class="text-success fs-5 fw-bold">$<%= home.price %> / night</p>
          </div>

          <div class="mb-4 border-bottom pb-3">
            <h3 class="h5 fw-semibold mb-2">Rating</h3>
            <div class="d-flex align-items-center">
              <span class="text-warning fs-4">â˜…</span>
              <span class="ms-2 fs-6"><%= home.rating %> / 5</span>
            </div>
          </div>

          <div class="mt-3">
            <%- include('../partials/favourite') %>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>
