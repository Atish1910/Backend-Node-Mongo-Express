<%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>

    <main class="container mt-5 bg-white shadow rounded p-4">
      <h2 class="h3 text-danger fw-bold text-center mb-4">
        Here are our registered homes:
      </h2>

      <div class="row justify-content-center g-4">
        <% registeredHomes.forEach(home => { %>
          <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0">
              <img
                src="<%= home.photo %>"
                alt="<%= home.houseName %>"
                class="card-img-top"
                style="height: 200px; object-fit: cover;"
              />

              <div class="card-body">
                <h5 class="card-title fw-semibold text-dark mb-2">
                  <%= home.houseName %>
                </h5>

                <p class="text-muted mb-2">
                  <i class="fas fa-map-marker-alt me-2"></i><%= home.location %>
                </p>

                <div class="d-flex justify-content-between align-items-center mb-3">
                  <span class="fw-bold text-danger">Rs<%= home.price %> / night</span>
                  <div class="d-flex align-items-center">
                    <i class="fas fa-star text-warning me-1"></i>
                    <span class="text-dark"><%= home.rating %></span>
                  </div>
                </div>

                <a href="/homes/<%= home._id %>" class="btn btn-primary btn-sm me-2">Details</a>

                <%- include('../partials/favourite', { home: home }) %>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </main>
  </body>
</html>
