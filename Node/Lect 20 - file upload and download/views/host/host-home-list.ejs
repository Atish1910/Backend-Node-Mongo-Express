<%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>

    <main class="container mt-5 bg-white shadow rounded p-4">
      <h2 class="h3 text-danger fw-bold text-center mb-4">
        Hey Host! Here are your homes:
      </h2>

      <div class="row justify-content-center g-4">
        <% registeredHomes.forEach(home => { %>
          <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0">
              <img src="<%= home.photo %>" alt="<%= home.houseName %>" class="card-img-top" style="height: 200px; object-fit: cover;">
              
              <div class="card-body">
                <h5 class="card-title fw-semibold text-dark"><%= home.houseName %></h5>
                <p class="card-text text-muted mb-2">
                  <i class="fas fa-map-marker-alt me-2"></i><%= home.location %>
                </p>

                <div class="d-flex justify-content-between align-items-center mb-3">
                  <span class="text-danger fw-bold">Rs<%= home.price %> / night</span>
                  <div class="d-flex align-items-center">
                    <i class="fas fa-star text-warning me-1"></i>
                    <span class="text-dark"><%= home.rating %></span>
                  </div>
                </div>

                <div class="d-flex justify-content-between">
                  <a href="/host/edit-home/<%= home._id %>?editing=true" class="btn btn-primary btn-sm">Edit</a>
                  <form action="/host/delete-home/<%= home._id %>" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </main>
  </body>
</html>
