<%- include('../partials/head') %>
  <body>
    <%- include('../partials/nav') %>
    <main class="container mt-5">
      <div class="row justify-content-center">
        <div class="col-md-6 bg-white p-4 rounded shadow-sm">
          <h1 class="h3 text-center text-dark mb-4 fw-bold">
            Register as New User
          </h1>

          <form action="/signup" method="POST">
              <input
                type="text"
                name="firstname"
                placeholder="first Name"
                class="form-control mb-3"
                required
              />
              <input
                type="text"
                name="lastname"
                placeholder="Last Name"
                class="form-control mb-3"
              />
              <input
                type="email"
                name="email"
                placeholder="Enter Your Emal Address"
                class="form-control mb-3"
                required
              />
              <input
                type="password"
                name="password"
                placeholder="Enter Your Password"
                class="form-control mb-3"
                required
              />
              <input
                type="password"
                name="confirmPassword"
                placeholder="Enter Your confirmPassword"
                class="form-control mb-3"
                required
              />
              <select name="" id="" class="form-select mb-3">
                <option value="" selected disabled>Select Type</option>
                <option  name="userType" value="guest">Gauet</option>
                <option name="userType" value="host">Gost</option>
              </select>
              <div class="input-group mb-3">
                <div class="input-group-text">
                  <input class="form-check-input mt-0 me-3" type="checkbox" value="" aria-label="Checkbox for following text input">
                  <label for="">I confirm for term & Conditions</label>
                </div>
              </div>
              <div class="d-grid">
                <input type="submit" value="Sign In" class="btn btn-danger" />
              </div>
          </form>
        </div>
      </div>
    </main>
  </body>
</html>
